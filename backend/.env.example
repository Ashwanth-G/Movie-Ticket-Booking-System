# Server
NODE_ENV=development
PORT=5000

# MongoDB (local or Atlas)
# Local: mongodb://localhost:27017/movie-booking
# Atlas: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/movie-booking?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/movie-booking?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=http://localhost:3000

# Optional: user with this email gets admin role (register or login).
# Set to your email (e.g. admin@example.com), then register or log in again to get admin access.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
